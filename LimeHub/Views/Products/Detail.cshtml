@model LimeHub.Models.Product

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <title>@Model.Name - Chi tiết sản phẩm</title>
    <link rel="shortcut icon" href="~/assets/images/coffee-icon-sign-symbol-design-free-png.webp" type="image/x-icon">

    <link rel="stylesheet" href="~/assets/web/assets/mobirise-icons2/mobirise2.css">
    <link rel="stylesheet" href="~/assets/web/assets/mobirise-icons-bold/mobirise-icons-bold.css">
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="~/assets/parallax/jarallax.css">
    <link rel="stylesheet" href="~/assets/dropdown/css/style.css">
    <link rel="stylesheet" href="~/assets/socicon/css/styles.css">
    <link rel="stylesheet" href="~/assets/theme/css/style.css">
    <link rel="preload" href="https://fonts.googleapis.com/css?family=Jost:100,200,300,400,500,600,700,800,900,100i,200i,300i,400i,500i,600i,700i,800i,900i&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Jost:100,200,300,400,500,600,700,800,900,100i,200i,300i,400i,500i,600i,700i,800i,900i&display=swap"></noscript>
    <link rel="preload" as="style" href="~/assets/mobirise/css/mbr-additional.css">
    <link rel="stylesheet" href="~/assets/mobirise/css/mbr-additional.css" type="text/css">

    <style>
       
        .product-detail-container {
            padding: 50px 0;
        }

        .product-image-section {
           
            min-height: 400px; 
            background-color: #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            border-radius: 8px;
            margin-bottom: 30px;
        }

            .product-image-section img {
                max-width: 100%;
                height: auto;
                display: block;
            }

        .main-info h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 5px;
            color: #333;
        }

        .main-info .price {
            font-size: 2.2rem;
            font-weight: 700;
            color: #ff4500;
            margin-bottom: 15px;
        }

        .meta-info {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 25px;
        }

            .meta-info span {
                margin-right: 15px;
            }

            .meta-info .id-tag {
                background-color: #e0e0e0;
                padding: 3px 8px;
                border-radius: 4px;
                font-weight: 500;
            }

            .meta-info .icon-text {
                display: inline-flex;
                align-items: center;
            }

                .meta-info .icon-text .mbr-iconfont {
                    margin-right: 5px;
                    font-size: 1rem;
                    vertical-align: middle;
                }

        .feature-cards {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 30px;
        }

        .feature-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 120px; 
            height: 100px; 
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 10px;
            text-align: center;
            font-size: 0.85rem;
            color: #555;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

            .feature-card.used { 
                background-color: #333;
                color: #fff;
                border-color: #333;
            }

            .feature-card .icon {
                font-size: 2rem; 
                margin-bottom: 5px;
            }

            .feature-card.used .icon {
                color: #fff;
            }

        .detail-section {
            margin-top: 30px;
            border-top: 1px solid #eee;
            padding-top: 30px;
        }

            .detail-section h4 {
                font-size: 1.5rem;
                font-weight: 600;
                margin-bottom: 20px;
                color: #333;
            }

        .detail-item {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px dashed #eee;
            font-size: 1rem;
            color: #444;
        }

            .detail-item:last-child {
                border-bottom: none;
            }

        .detail-item-label {
            font-weight: 500;
            color: #777;
        }

        .detail-item-value {
            font-weight: 400;
            text-align: right;
        }

        .contact-seller {
            margin-top: 30px;
            text-align: center;
        }

            .contact-seller a {
                font-size: 1.1rem;
                padding: 10px 25px;
                border-radius: 5px;
            }
    </style>
</head>
<body>

    <section data-bs-version="5.1" class="menu menu3 cid-tsEQosCCDP" once="menu" id="menu3-0">
        <nav class="navbar navbar-dropdown navbar-fixed-top navbar-expand-lg">
            <div class="container">
                <div class="navbar-brand">
                    <span class="navbar-logo">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/assets/images/coffee-icon-sign-symbol-design-free-png.webp" alt="Coffee Shop" style="height: 3rem;">
                        </a>
                    </span>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-bs-toggle="collapse"
                        data-target="#navbarSupportedContent" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <div class="hamburger">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav nav-dropdown nav-right" data-app-modern-menu="true">
                        <li class="nav-item">
                            <a class="nav-link link text-black show display-4" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link text-black show display-4" asp-controller="Products" asp-action="Shop">Cửa hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link text-black show display-4" asp-controller="Home" asp-action="Contact">Liên hệ</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link link text-black dropdown-toggle show display-4"
                               data-toggle="dropdown-submenu" data-bs-toggle="dropdown" data-bs-auto-close="outside"
                               aria-expanded="false">
                                <span class="mobi-mbri mobi-mbri-user-2 mbr-iconfont mbr-iconfont-btn"></span>
                            </a>
                            <div class="dropdown-menu show" aria-labelledby="dropdown-751" data-bs-popper="none">
                                <a class="text-black show dropdown-item display-4" href="">Đăng ký</a>
                                <a class="text-black show dropdown-item display-4" href="">Đăng nhập</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link text-black show display-4" asp-controller="Cart" asp-action="Index">
                                <span class="mobi-mbri mobi-mbri-shopping-bag mbr-iconfont mbr-iconfont-btn"><small>(0)</small></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>

    <section class="product-detail-container">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6">
                    <div class="product-image-section">
                        
                        <img src="@Model.ImageUrl" alt="@Model.Name">
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="main-info">
                        <h1>@Model.Name</h1>
                        <p class="mbr-text mbr-fonts-style mt-3 display-7">@Model.Price.ToString("C")</p>
                    </div>
                </div>

                    <div class="meta-info">
                        <span class="id-tag">ID:@Model.Id</span>
                        @if (Model.PostedDate != default(DateTime))
                        {
                            <span class="icon-text"><span class="mbrib-calendar mbr-iconfont"></span>@Model.PostedDate.ToString("d 'tháng trước'")</span>
                        }
                        @if (Model.ViewsCount > 0)
                        {
                            <span class="icon-text"><span class="mobi-mbri mobi-mbri-eye mbr-iconfont"></span>@Model.ViewsCount</span>
                        }
                    </div>

                    <div class="feature-cards">
                        @* Các thẻ tính năng nổi bật *@
                        <div class="feature-card @(Model.Condition == "Used" ? "used" : "")">
                            <span class="icon @(Model.Condition == "Used" ? "mbrib-tag" : "mobi-mbri mobi-mbri-check")"></span>
                            <p>@Model.Condition</p>
                        </div>
                        <div class="feature-card">
                            <span class="icon mobi-mbri mobi-mbri-speed"></span> @* Icon đại diện xe điện *@
                            <p>@Model.VehicleType</p>
                        </div>
                        <div class="feature-card">
                            <span class="icon mobi-mbri mobi-mbri-calendar"></span> @* Icon năm sử dụng *@
                            <p>@Model.YearsUsed năm</p>
                        </div>
                        <div class="feature-card">
                            <span class="icon mobi-mbri mobi-mbri-road-map"></span> @* Icon số km *@
                            <p>@Model.Mileage km</p>
                        </div>
                    </div>

                    <div class="detail-section">
                        <h4>Mô tả chi tiết</h4>
                        <div class="detail-list">
                            
                            <div class="detail-item">
                                <span class="detail-item-label">Mô tả sản phẩm</span>
                                <span class="detail-item-value">@Model.Detail</span> 
                            </div>

                            
                            <div class="detail-item">
                                <span class="detail-item-label">Năm sản xuất</span>
                                <span class="detail-item-value">@(Model.ManufactureYear > 0 ? Model.ManufactureYear.ToString() : "")</span>
                            </div>

                            
                            <div class="detail-item">
                                <span class="detail-item-label">Nhiên liệu / Hộp số</span>
                                <span class="detail-item-value">@Model.FuelTransmission</span>
                            </div>

                           
                            <div class="detail-item">
                                <span class="detail-item-label">Động cơ (phân khối)</span>
                                <span class="detail-item-value">@Model.EngineDisplacement</span> 
                            </div>

                           
                            <div class="detail-item">
                                <span class="detail-item-label">Màu sắc</span>
                                <span class="detail-item-value">@Model.Color</span> 
                            </div>

                           
                            <div class="detail-item">
                                <span class="detail-item-label">Khu vực</span>
                                <span class="detail-item-value">@Model.Location</span> 
                            </div>

                            <div class="detail-item">
                                <span class="detail-item-label">Xem xe trực tiếp</span>
                                <span class="detail-item-value">Liên hệ người bán</span>  </div>

                        </div>
                    </div>
                    <div class="contact-seller">
                        <a href="#" class="btn btn-primary display-4">Thêm vào giỏ hàng</a>
                        
                    </div>
                </div>
            </div>
    </section>

    <script src="~/assets/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/parallax/jarallax.js"></script>
    <script src="~/assets/smoothscroll/smooth-scroll.js"></script>
    <script src="~/assets/ytplayer/index.js"></script>
    <script src="~/assets/dropdown/js/navbar-dropdown.js"></script>
    <script src="~/assets/theme/js/script.js"></script>

</body>
</html>